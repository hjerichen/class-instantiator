{
    "name": "hjerichen/class-instantiator",
    "description": "A factory for objects. Instantiates any class.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Heiko Jerichen",
            "email": "heiko@jerichen.de"
        }
    ],
    "require": {
        "php": "^8.2",
        "hjerichen/collections": "^1.2",
        "psr/container": "^1.1|^2.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^9.6",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpdocumentor/reflection-docblock": "^5.0",
        "vimeo/psalm": "^6.1",
        "psalm/plugin-phpunit": "^0.19"
    },
    "autoload": {
        "psr-4": {
            "HJerichen\\ClassInstantiator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HJerichen\\ClassInstantiator\\Test\\": "tests"
        }
    }
}
